@page "/phonics/{PhaseId:int}/card/{GraphemeId}"

<PageTitle>@(Card?.Grapheme ?? "Phonics") - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-4">
        <div class="flex items-center">
            <button @onclick="GoBack" class="back-button" aria-label="Go back">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
        </div>
    </header>

    @if (ShowPhaseComplete)
    {
        <!-- Phase Complete Message -->
        <div class="flashcard-container">
            <div class="flashcard">
                <div class="phase-complete-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-calm-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="phase-complete-title">Phase Complete!</div>
                <p class="phase-complete-message">Well done! All sounds in this phase have been learned.</p>
                <button @onclick="GoBack" class="got-it-button" style="margin-top: 1.5rem;">
                    Back to Sound List
                </button>
            </div>
        </div>
    }
    else if (Card != null)
    {
        <!-- Flashcard -->
        <div class="flashcard-container">
            <div class="flashcard">
                <!-- Large Grapheme -->
                <div class="grapheme-display">@Card.Grapheme</div>

                <!-- Example Word with highlighted grapheme -->
                <div class="example-word">@((MarkupString)HighlightGrapheme(Card.ExampleWord, Card.Grapheme))</div>

                <!-- Keyword Hint -->
                <div class="keyword-hint">@Card.KeywordHint</div>
            </div>
        </div>

        <!-- Bottom Navigation -->
        <div class="nav-bar">
            <!-- Previous Button -->
            <button @onclick="GoPrevious" class="nav-arrow @(CanGoPrevious ? "" : "nav-disabled")" disabled="@(!CanGoPrevious)" aria-label="Previous sound">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
            </button>

            <!-- Got it! Button (only for current unlocked sound) -->
            @if (IsCurrentUnlocked)
            {
                <button @onclick="HandleGotIt" class="got-it-button">
                    Got it!
                </button>
            }
            else
            {
                <div></div>
            }

            <!-- Next Button -->
            <button @onclick="GoNext" class="nav-arrow @(CanGoNext ? "" : "nav-disabled")" disabled="@(!CanGoNext)" aria-label="Next sound">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>
    }
</div>

<style>
    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        background-color: white;
        color: #7BA3C4;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        background-color: #F0EDE8;
    }

    .flashcard-container {
        display: flex;
        flex: 1;
        align-items: center;
        justify-content: center;
        padding: 1rem;
    }

    .flashcard {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        max-width: 28rem;
        padding: 3rem 2rem;
        background-color: white;
        border-radius: 1.5rem;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    }

    .grapheme-display {
        font-size: 5rem;
        font-weight: 800;
        color: #3D4852;
        line-height: 1.1;
        margin-bottom: 1.5rem;
    }

    .example-word {
        font-size: 2rem;
        font-weight: 600;
        color: #3D4852;
        margin-bottom: 1rem;
    }

    .grapheme-highlight {
        color: #7BA3C4;
    }

    .keyword-hint {
        font-size: 1.125rem;
        color: #606F7B;
        font-style: italic;
    }

    /* Phase Complete */
    .phase-complete-icon {
        margin-bottom: 1rem;
    }

    .phase-complete-title {
        font-size: 2rem;
        font-weight: 800;
        color: #3D4852;
        margin-bottom: 0.5rem;
    }

    .phase-complete-message {
        font-size: 1.125rem;
        color: #606F7B;
        text-align: center;
    }

    /* Bottom Navigation Bar */
    .nav-bar {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: 28rem;
        margin: 0 auto;
        padding: 1rem 1.5rem 2rem;
    }

    .nav-arrow {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        background-color: white;
        color: #7BA3C4;
        border: 2px solid #7BA3C4;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .nav-arrow:hover:not(:disabled) {
        background-color: #7BA3C4;
        color: white;
    }

    .nav-disabled {
        opacity: 0.3;
        cursor: default;
        border-color: #C0BFBB;
        color: #C0BFBB;
    }

    .got-it-button {
        padding: 0.875rem 2.5rem;
        min-height: 3rem;
        font-size: 1.25rem;
        font-weight: 700;
        background-color: #7BA3C4;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(123, 163, 196, 0.3);
    }

    .got-it-button:hover {
        background-color: #6890B0;
        box-shadow: 0 4px 12px rgba(123, 163, 196, 0.4);
    }

    @@media (min-width: 768px) {
        .grapheme-display {
            font-size: 7rem;
        }

        .example-word {
            font-size: 2.5rem;
        }

        .keyword-hint {
            font-size: 1.25rem;
        }

        .flashcard {
            padding: 4rem 3rem;
        }

        .got-it-button {
            font-size: 1.375rem;
            padding: 1rem 3rem;
        }
    }
</style>
