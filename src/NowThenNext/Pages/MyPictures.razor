@page "/my-pictures"
@page "/my-pictures/{Tab}"
@using NowThenNext.Components

<PageTitle>My Pictures - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header with Back Button -->
    <header class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-4">
        <div class="flex items-center gap-4">
            <button @onclick="GoHome" class="back-button" aria-label="Go back to home">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <h1 class="text-2xl sm:text-3xl font-bold text-calm-text">
                My Pictures
            </h1>
        </div>
    </header>

    <!-- Tab Navigation -->
    <nav class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-6">
        <div class="tab-container">
            <button @onclick='() => SwitchTab("places")'
                    class="tab @(IsPlacesActive ? "tab-active" : "")"
                    aria-selected="@IsPlacesActive">
                <span class="tab-icon @(IsPlacesActive ? "tab-icon-active-places" : "")">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                </span>
                <span class="tab-label">Places</span>
            </button>
            <button @onclick='() => SwitchTab("food")'
                    class="tab @(IsFoodActive ? "tab-active" : "")"
                    aria-selected="@IsFoodActive">
                <span class="tab-icon @(IsFoodActive ? "tab-icon-active-food" : "")">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                    </svg>
                </span>
                <span class="tab-label">Food</span>
            </button>
            <!-- Tab Indicator -->
            <div class="tab-indicator @(IsFoodActive ? "tab-indicator-food" : "tab-indicator-places")"></div>
        </div>
    </nav>

    <!-- Content Area -->
    <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 flex-1">
        <!-- Storage Warning Banner -->
        <StorageWarningBanner />

        <!-- Add Button -->
        <div class="flex justify-end mb-4">
            <a href="/upload/@CurrentTab" class="add-button" aria-label="Add new image">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                </svg>
                <span>Add @(IsPlacesActive ? "Place" : "Food")</span>
            </a>
        </div>

        @if (IsLoading)
        {
            <div class="loading-container">
                <div class="loading-spinner"></div>
                <p class="text-calm-text-light mt-4">Loading images...</p>
            </div>
        }
        else if (Images.Count == 0)
        {
            <!-- Empty State -->
            <div class="empty-state">
                <div class="empty-icon">
                    @if (IsPlacesActive)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-calm-primary-light" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-16 h-16 text-calm-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                        </svg>
                    }
                </div>
                <h2 class="text-xl font-semibold text-calm-text mb-2">
                    @(IsPlacesActive ? "No Places Yet" : "No Food Pictures Yet")
                </h2>
                <p class="text-calm-text-light mb-6">
                    @(IsPlacesActive
                        ? "Add pictures of places and activities to use in your daily schedule."
                        : "Add pictures of food items to use for meal choices.")
                </p>
                <a href="/upload/@CurrentTab" class="empty-action-button @(IsPlacesActive ? "" : "empty-action-button-food")">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
                    </svg>
                    Add First @(IsPlacesActive ? "Place" : "Food Picture")
                </a>
            </div>
        }
        else
        {
            <!-- Image Grid -->
            <div class="image-grid">
                @foreach (var image in Images)
                {
                    <ImageTile Image="@image"
                               OnFavoriteToggle="HandleFavoriteToggle"
                               OnDelete="HandleDeleteRequest" />
                }
            </div>
        }
    </div>

    <!-- Delete Confirmation Modal -->
    @if (ShowDeleteConfirmation)
    {
        <div class="modal-overlay" @onclick="CancelDelete">
            <div class="modal-content" @onclick:stopPropagation="true">
                <h3 class="modal-title">Delete Image?</h3>
                <p class="modal-message">Are you sure you want to delete this image? This cannot be undone.</p>
                <div class="modal-buttons">
                    <button @onclick="CancelDelete" class="modal-cancel-button">
                        Cancel
                    </button>
                    <button @onclick="ConfirmDelete" class="modal-delete-button">
                        Delete
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        background-color: white;
        color: #5B9A9A;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        background-color: #F0EDE8;
    }

    /* Tab Container */
    .tab-container {
        display: flex;
        position: relative;
        background-color: white;
        border-radius: 1rem;
        padding: 0.375rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .tab {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.875rem 1rem;
        min-height: 3.5rem;
        background: transparent;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
    }

    .tab-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        color: #8795A1;
        transition: color 0.3s ease;
    }

    .tab-icon-active-places {
        color: #5B9A9A;
    }

    .tab-icon-active-food {
        color: #7BA893;
    }

    .tab-label {
        font-size: 1.125rem;
        font-weight: 600;
        color: #8795A1;
        transition: color 0.3s ease;
    }

    .tab-active .tab-label {
        color: #3D4852;
    }

    /* Tab Indicator - sliding background */
    .tab-indicator {
        position: absolute;
        top: 0.375rem;
        bottom: 0.375rem;
        width: calc(50% - 0.375rem);
        background-color: #F9F7F3;
        border-radius: 0.75rem;
        transition: transform 0.3s ease, background-color 0.3s ease;
        z-index: 0;
    }

    .tab-indicator-places {
        transform: translateX(0.375rem);
        background-color: rgba(91, 154, 154, 0.1);
    }

    .tab-indicator-food {
        transform: translateX(calc(100% + 0.375rem));
        background-color: rgba(123, 168, 147, 0.1);
    }

    /* Add Button */
    .add-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        min-height: 3rem;
        font-size: 1rem;
        font-weight: 600;
        background-color: #5B9A9A;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(91, 154, 154, 0.3);
        text-decoration: none;
    }

    .add-button:hover {
        background-color: #4A8585;
        box-shadow: 0 4px 12px rgba(91, 154, 154, 0.4);
    }

    .loading-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
    }

    .loading-spinner {
        width: 3rem;
        height: 3rem;
        border: 3px solid #E2DFD8;
        border-top-color: #5B9A9A;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 4rem 2rem;
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

    .empty-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 6rem;
        height: 6rem;
        background-color: #F9F7F3;
        border-radius: 50%;
        margin-bottom: 1.5rem;
    }

    .empty-action-button {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        padding: 1rem 1.5rem;
        min-height: 3rem;
        font-size: 1.125rem;
        font-weight: 600;
        background-color: #5B9A9A;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(91, 154, 154, 0.3);
        text-decoration: none;
    }

    .empty-action-button:hover {
        background-color: #4A8585;
        box-shadow: 0 4px 12px rgba(91, 154, 154, 0.4);
    }

    .empty-action-button-food {
        background-color: #7BA893;
        box-shadow: 0 2px 8px rgba(123, 168, 147, 0.3);
    }

    .empty-action-button-food:hover {
        background-color: #6B9883;
        box-shadow: 0 4px 12px rgba(123, 168, 147, 0.4);
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
        padding-bottom: 2rem;
    }

    /* Tablet optimization - ensure consistent 3 columns on tablets */
    @@media (min-width: 768px) and (max-width: 1023px) {
        .image-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.25rem;
        }
    }

    /* Larger tablets/small desktop - 4 columns */
    @@media (min-width: 1024px) {
        .image-grid {
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
        }
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background-color: rgba(61, 72, 82, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        z-index: 50;
    }

    .modal-content {
        background-color: white;
        border-radius: 1rem;
        padding: 1.5rem;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .modal-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #3D4852;
        margin-bottom: 0.75rem;
    }

    .modal-message {
        font-size: 1rem;
        color: #606F7B;
        margin-bottom: 1.5rem;
    }

    .modal-buttons {
        display: flex;
        gap: 1rem;
    }

    .modal-cancel-button {
        flex: 1;
        padding: 0.875rem 1rem;
        min-height: 3rem;
        font-size: 1rem;
        font-weight: 600;
        background-color: #F0EDE8;
        color: #3D4852;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .modal-cancel-button:hover {
        background-color: #E2DFD8;
    }

    .modal-delete-button {
        flex: 1;
        padding: 0.875rem 1rem;
        min-height: 3rem;
        font-size: 1rem;
        font-weight: 600;
        background-color: #D4A06A;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .modal-delete-button:hover {
        background-color: #C4905A;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>
