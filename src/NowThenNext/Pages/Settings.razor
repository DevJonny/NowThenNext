        padding-top: 0.75rem;
    }

    .storage-item-row {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.5rem 0;
    }

    .storage-item-row + .storage-item-row {
        border-top: 1px solid #F0EDE8;
    }

    .storage-item-thumb {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.375rem;
        overflow: hidden;
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #F9F7F3;
    }

    .storage-item-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .storage-item-info {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        gap: 0.125rem;
    }

    .storage-item-label {
        font-size: 0.875rem;
        font-weight: 500;
        color: #3D4852;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .storage-item-badge {
        display: inline-block;
        font-size: 0.6875rem;
        font-weight: 600;
        color: white;
        padding: 0.0625rem 0.375rem;
        border-radius: 0.25rem;
        width: fit-content;
    }

    .storage-item-size {
        font-size: 0.8125rem;
        color: #606F7B;
        white-space: nowrap;
        flex-shrink: 0;
    }

    /* Tablet optimization */
    @@media (min-width: 768px) {
        .settings-container {
            padding: 3rem 2.5rem;
        }

        .settings-action-button {
            padding: 1.25rem 1.5rem;
            min-height: 5rem;
        }

        .action-icon {
            width: 4rem;
            height: 4rem;
        }

        .action-title {
            font-size: 1.25rem;
        }

        .action-description {
            font-size: 1rem;
        }

        .modal-content {
            padding: 2rem;
        }

        .modal-title {
            font-size: 1.375rem;
        }
    }
</style>
