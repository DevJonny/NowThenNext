    }

    .storage-progress-bar-container {
        width: 100%;
        height: 0.75rem;
        background-color: #E2DFD8;
        border-radius: 0.375rem;
        overflow: hidden;
    }

    .storage-progress-bar-fill {
        height: 100%;
        border-radius: 0.375rem;
        transition: width 0.5s ease;
        min-width: 0;
    }

    .storage-usage-text {
        font-size: 0.875rem;
        color: #606F7B;
        margin-top: 0.5rem;
    }

    .storage-item-list {
        width: 100%;
        max-height: 400px;
        overflow-y: auto;
        border-top: 1px solid #E2DFD8;
