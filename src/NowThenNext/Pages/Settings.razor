@page "/settings"

<PageTitle>Settings - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-6">
        <div class="flex items-center gap-4">
            <button @onclick="GoBack" class="back-button" aria-label="Go back">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <h1 class="text-2xl sm:text-3xl font-bold text-calm-primary">
                Settings
            </h1>
        </div>
    </header>

    <!-- Content -->
    <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 flex-1">
        <div class="settings-container">
            <!-- Settings Icon -->
            <div class="settings-icon-container">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-12 h-12 text-calm-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path d="M12 15a3 3 0 100-6 3 3 0 000 6z" />
                    <path d="M19.4 15a1.65 1.65 0 00.33 1.82l.06.06a2 2 0 010 2.83 2 2 0 01-2.83 0l-.06-.06a1.65 1.65 0 00-1.82-.33 1.65 1.65 0 00-1 1.51V21a2 2 0 01-2 2 2 2 0 01-2-2v-.09A1.65 1.65 0 009 19.4a1.65 1.65 0 00-1.82.33l-.06.06a2 2 0 01-2.83 0 2 2 0 010-2.83l.06-.06a1.65 1.65 0 00.33-1.82 1.65 1.65 0 00-1.51-1H3a2 2 0 01-2-2 2 2 0 012-2h.09A1.65 1.65 0 004.6 9a1.65 1.65 0 00-.33-1.82l-.06-.06a2 2 0 010-2.83 2 2 0 012.83 0l.06.06a1.65 1.65 0 001.82.33H9a1.65 1.65 0 001-1.51V3a2 2 0 012-2 2 2 0 012 2v.09a1.65 1.65 0 001 1.51 1.65 1.65 0 001.82-.33l.06-.06a2 2 0 012.83 0 2 2 0 010 2.83l-.06.06a1.65 1.65 0 00-.33 1.82V9a1.65 1.65 0 001.51 1H21a2 2 0 012 2 2 2 0 01-2 2h-.09a1.65 1.65 0 00-1.51 1z" />
                </svg>
            </div>

            <h2 class="text-xl font-semibold text-calm-text mb-2">Data Management</h2>
            <p class="text-calm-text-light text-center mb-8">
                Backup your images and settings, or restore from a previous backup.
            </p>

            <!-- Success/Error Messages -->
            @if (!string.IsNullOrEmpty(SuccessMessage))
            {
                <div class="success-message">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    <span>@SuccessMessage</span>
                </div>
            }

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="error-message">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <span>@ErrorMessage</span>
                </div>
            }

            <!-- Action Buttons -->
            <div class="settings-actions">
                <!-- Backup Button -->
                <button class="settings-action-button backup-button" @onclick="BackupData" disabled="@IsBackingUp">
                    <div class="action-icon">
                        @if (IsBackingUp)
                        {
                            <!-- Loading spinner -->
                            <svg class="w-8 h-8 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        else
                        {
                            <!-- Download/Export Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                            </svg>
                        }
                    </div>
                    <div class="action-content">
                        <span class="action-title">@(IsBackingUp ? "Backing up..." : "Backup Data")</span>
                        <span class="action-description">Save all your images to a file</span>
                    </div>
                </button>

                <!-- Restore Button -->
                <button class="settings-action-button restore-button" @onclick="TriggerRestoreFilePicker" disabled="@IsRestoring">
                    <div class="action-icon restore-icon">
                        @if (IsRestoring)
                        {
                            <!-- Loading spinner -->
                            <svg class="w-8 h-8 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                            </svg>
                        }
                        else
                        {
                            <!-- Upload/Import Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                            </svg>
                        }
                    </div>
                    <div class="action-content">
                        <span class="action-title">@(IsRestoring ? "Restoring..." : "Restore Data")</span>
                        <span class="action-description">Load images from a backup file</span>
                    </div>
                </button>

                <!-- Hidden file input for restore -->
                <InputFile id="restore-file-input" OnChange="OnRestoreFileSelected" accept=".json" style="display: none;" />
            </div>
        </div>

        <!-- Storage Usage -->
        <div class="settings-container storage-section" style="margin-top: 1.5rem;">
            <h2 class="text-xl font-semibold text-calm-text mb-4" style="align-self: flex-start;">Storage Usage</h2>

            @if (IsLoadingStorage)
            {
                <div class="storage-loading">
                    <svg class="w-6 h-6 animate-spin" style="color: #5B9A9A;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                    <span class="text-calm-text-light">Calculating storage...</span>
                </div>
            }
            else if (!string.IsNullOrEmpty(StorageError))
            {
                <p class="text-calm-text-light">@StorageError</p>
            }
            else
            {
                <!-- Progress Bar -->
                <div class="storage-progress-bar-container" data-testid="storage-progress-bar"
                     role="progressbar"
                     aria-valuenow="@(StorageUsageInfo?.UsagePercentage.ToString("F0", System.Globalization.CultureInfo.InvariantCulture) ?? "0")"
                     aria-valuemin="0"
                     aria-valuemax="100"
                     aria-label="Storage usage">
                    <div class="storage-progress-bar-fill"
                         style="width: @(StorageUsageInfo?.UsagePercentage.ToString("F1", System.Globalization.CultureInfo.InvariantCulture) ?? "0")%; background-color: @(StorageUsageInfo != null && StorageUsageInfo.UsagePercentage > 80 ? "#D4A06A" : "#5B9A9A");">
                    </div>
                </div>

                @if (StorageUsageInfo != null && StorageUsageInfo.CurrentUsageBytes > 0)
                {
                    <p class="storage-usage-text">
                        @FormatBytes(StorageUsageInfo.CurrentUsageBytes) of @FormatBytes(StorageUsageInfo.EstimatedQuotaBytes) used (@(StorageUsageInfo.UsagePercentage.ToString("F0"))%)
                    </p>
                }
                else
                {
                    <p class="storage-usage-text">No data stored</p>
                }

                @if (StorageBreakdownItems != null && StorageBreakdownItems.Count > 0)
                {
                    <div class="storage-item-list" data-testid="storage-item-list">
                        @foreach (var item in StorageBreakdownItems)
                        {
                            <div class="storage-item-row" data-testid="storage-item">
                                <!-- Thumbnail / Icon -->
                                <div class="storage-item-thumb">
                                    @if (item.ThumbnailData != null)
                                    {
                                        <img src="data:image/jpeg;base64,@item.ThumbnailData" alt="@item.Label" class="storage-item-img" />
                                    }
                                    else if (item.Id == "phonics-progress")
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" style="color: #606F7B;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                        </svg>
                                    }
                                    else if (item.Id == "learning-cards")
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" style="color: #606F7B;" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                        </svg>
                                    }
                                </div>

                                <!-- Label + Category Badge -->
                                <div class="storage-item-info">
                                    <span class="storage-item-label">@item.Label</span>
                                    <span class="storage-item-badge" style="background-color: @GetCategoryColor(item.Category);">@item.Category</span>
                                </div>

                                <!-- Size -->
                                <span class="storage-item-size">@FormatBytes(item.SizeBytes)</span>
                            </div>
                        }
                    </div>
                }
            }
        </div>

        <!-- Attribution -->
        <div class="attribution-section">
            <p class="attribution-text">
                Dinosaur illustrations by DBCLS (CC BY 4.0) via Wikimedia Commons
            </p>
        </div>
    </div>
</div>

<!-- Replace/Merge Choice Modal -->
@if (ShowRestoreChoiceModal)
{
    <div class="modal-overlay" @onclick="CancelRestore">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h3 class="modal-title">How would you like to restore?</h3>
            <p class="modal-description">
                This backup contains <strong>@PendingRestoreImages?.Count images</strong>.
            </p>

            <div class="restore-options">
                <button class="restore-option-button replace-button" @onclick="PerformReplace">
                    <div class="option-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                    </div>
                    <div class="option-content">
                        <span class="option-title">Replace All Data</span>
                        <span class="option-description">Clear existing images and import backup</span>
                    </div>
                </button>

                <button class="restore-option-button merge-button" @onclick="PerformMerge">
                    <div class="option-icon merge-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v6m3-3H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="option-content">
                        <span class="option-title">Merge with Existing</span>
                        <span class="option-description">Add new images, skip duplicates</span>
                    </div>
                </button>
            </div>

            <button class="cancel-button" @onclick="CancelRestore">Cancel</button>
        </div>
    </div>
}

