    }

    .section-header {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 1rem;
        padding-bottom: 0.75rem;
        border-bottom: 2px solid #F0EDE8;
    }

    .section-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.25rem;
        height: 2.25rem;
        border-radius: 0.5rem;
    }

    .section-icon-places {
        background-color: rgba(91, 154, 154, 0.15);
        color: #5B9A9A;
    }

    .section-icon-food {
        background-color: rgba(123, 168, 147, 0.15);
        color: #7BA893;
    }

    .section-icon-activities {
        background-color: rgba(155, 138, 168, 0.15);
        color: #9B8AA8;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #3D4852;
        flex: 1;
    }

    .section-count {
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 1.75rem;
        height: 1.75rem;
        padding: 0 0.5rem;
        font-size: 0.875rem;
        font-weight: 600;
        color: #606F7B;
        background-color: #F0EDE8;
        border-radius: 1rem;
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 1.5rem;
    }

    /* Tablet optimization - consistent 3 columns on tablets */
    @@media (min-width: 768px) and (max-width: 1023px) {
        .image-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.25rem;
        }
    }

    /* Larger tablets/small desktop - 4 columns */
    @@media (min-width: 1024px) {
        .image-grid {
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
        }
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        inset: 0;
        background-color: rgba(61, 72, 82, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem;
        z-index: 50;
    }

    .modal-content {
        background-color: white;
        border-radius: 1rem;
        padding: 1.5rem;
        max-width: 400px;
        width: 100%;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.2);
    }

    .modal-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #3D4852;
        margin-bottom: 0.75rem;
    }

    .modal-message {
        font-size: 1rem;
        color: #606F7B;
        margin-bottom: 1.5rem;
    }

    .modal-buttons {
        display: flex;
        gap: 1rem;
    }

    .modal-cancel-button {
        flex: 1;
        padding: 0.875rem 1rem;
        min-height: 3rem;
        font-size: 1rem;
        font-weight: 600;
        background-color: #F0EDE8;
        color: #3D4852;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .modal-cancel-button:hover {
        background-color: #E2DFD8;
    }

    .modal-delete-button {
        flex: 1;
        padding: 0.875rem 1rem;
        min-height: 3rem;
        font-size: 1rem;
        font-weight: 600;
        background-color: #D4A06A;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .modal-delete-button:hover {
        background-color: #C4905A;
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }
</style>
