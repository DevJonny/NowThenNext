@page "/learning/{CategoryId}"

<PageTitle>@(Category?.Name ?? "Cards") - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="w-full max-w-5xl mx-auto px-6 sm:px-8 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button @onclick="GoBack" class="back-button" aria-label="Go back">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <h1 class="text-2xl sm:text-3xl font-bold text-calm-cards">
                    @if (Category != null)
                    {
                        <span>@Category.Emoji @Category.Name</span>
                    }
                </h1>
            </div>
        </div>
    </header>

    <!-- Card Grid -->
    <div class="w-full max-w-5xl mx-auto px-6 py-8 sm:px-8 sm:py-10 flex-1">
        <div class="card-grid">
            @foreach (var card in Cards)
            {
                <div class="learning-card @(RevealedCardId == card.Id ? "revealed" : "")"
                     @onclick="() => ToggleCard(card.Id)"
                     role="button"
                     tabindex="0"
                     aria-label="@(RevealedCardId == card.Id ? $"{card.Word} - tap to hide" : $"Tap to reveal word")">
                    <!-- Image -->
                    <div class="card-image">
                        @if (card.ImageData.StartsWith("<svg", StringComparison.OrdinalIgnoreCase))
                        {
                            @((MarkupString)card.ImageData)
                        }
                        else
                        {
                            <img src="data:image/png;base64,@card.ImageData" alt="@card.Word" />
                        }
                    </div>

                    <!-- Word (revealed on tap) -->
                    <div class="card-word @(RevealedCardId == card.Id ? "card-word-visible" : "")">
                        @card.Word
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        background-color: white;
        color: #D4937A;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        background-color: #F0EDE8;
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        padding-bottom: 2rem;
    }

    .learning-card {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.2s ease;
        overflow: hidden;
        min-width: 0;
    }

    .learning-card:hover {
        box-shadow: 0 4px 12px rgba(212, 147, 122, 0.2);
        transform: translateY(-2px);
    }

    .learning-card:active {
        transform: translateY(0);
    }

    .learning-card.revealed {
        border-color: #D4937A;
    }

    .card-image {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        aspect-ratio: 1;
        padding: 0.75rem;
        min-height: 120px;
    }

    .card-image :deep(svg) {
        width: 100%;
        height: 100%;
        max-width: 100%;
        max-height: 100%;
    }

    .card-image img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        border-radius: 0.5rem;
    }

    .card-word {
        font-size: 1.5rem;
        font-weight: 700;
        color: #3D4852;
        text-align: center;
        padding: 0 0.75rem 0.75rem;
        opacity: 0;
        max-height: 0;
        overflow: hidden;
        transition: opacity 0.4s ease, max-height 0.4s ease, padding 0.4s ease;
    }

    .card-word-visible {
        opacity: 1;
        max-height: 4rem;
        padding-bottom: 1rem;
    }

    @@media (min-width: 768px) {
        .card-grid {
            grid-template-columns: repeat(3, 1fr);
            gap: 1.25rem;
        }

        .card-image {
            padding: 1rem;
        }

        .card-word {
            font-size: 1.75rem;
        }
    }

    @@media (min-width: 1024px) {
        .card-grid {
            grid-template-columns: repeat(4, 1fr);
            gap: 1.5rem;
        }

        .card-image {
            padding: 1.25rem;
        }

        .card-word {
            font-size: 1.75rem;
        }
    }
</style>
