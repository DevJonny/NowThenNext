@page "/schedule"

<PageTitle>Schedule - NowThenNext</PageTitle>

<div class="schedule-container">
    <!-- Unobtrusive Back Button -->
    <button @onclick="GoBack" class="back-button" aria-label="Go back to selection">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
        </svg>
    </button>

    <!-- Auto-advance Toggle (only show when multiple items) -->
    @if (!IsLoading && ScheduleItems.Count > 1)
    {
        <button @onclick="ToggleAutoAdvance" class="mode-toggle" aria-label="@(IsAutoAdvance ? "Switch to static view" : "Switch to auto-advance view")">
            @if (IsAutoAdvance)
            {
                <!-- Pause icon - indicates clicking will stop auto-advance -->
                <svg xmlns="http://www.w3.org/2000/svg" class="toggle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 9v6m4-6v6m7-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="toggle-label">Auto</span>
            }
            else
            {
                <!-- Play icon - indicates clicking will start auto-advance -->
                <svg xmlns="http://www.w3.org/2000/svg" class="toggle-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span class="toggle-label">Static</span>
            }
        </button>
    }

    @if (IsLoading)
    {
        <div class="loading-container">
            <div class="loading-spinner"></div>
        </div>
    }
    else if (ScheduleItems.Count == 0)
    {
        <div class="empty-state">
            <p class="text-calm-text-light text-xl">No activities selected</p>
            <button @onclick="GoBack" class="return-button">
                Select Activities
            </button>
        </div>
    }
    else if (IsAutoAdvance)
    {
        <!-- Auto-advance Mode: Single large item with indicator dots -->
        <div class="auto-advance-display">
            <div class="schedule-item auto-advance-item now-item">
                <!-- Label -->
                <div class="item-label">
                    @GetSlotLabel(CurrentAutoAdvanceIndex)
                </div>

                <!-- Image Container with transition -->
                <div class="item-image-container">
                    <img src="@GetImageSrc(ScheduleItems[CurrentAutoAdvanceIndex])"
                         alt="@(string.IsNullOrEmpty(ScheduleItems[CurrentAutoAdvanceIndex].Label) ? GetSlotLabel(CurrentAutoAdvanceIndex) : ScheduleItems[CurrentAutoAdvanceIndex].Label)"
                         class="item-image auto-advance-image" />
                </div>

                <!-- Optional Activity Name -->
                @if (!string.IsNullOrEmpty(ScheduleItems[CurrentAutoAdvanceIndex].Label))
                {
                    <div class="item-name">
                        @ScheduleItems[CurrentAutoAdvanceIndex].Label
                    </div>
                }
            </div>

            <!-- Progress indicators -->
            <div class="progress-indicators">
                @for (int i = 0; i < ScheduleItems.Count; i++)
                {
                    var index = i;
                    <button @onclick="() => JumpToItem(index)"
                            class="progress-dot @(index == CurrentAutoAdvanceIndex ? "active" : "")"
                            aria-label="@GetSlotLabel(index)">
                        <span class="dot-label">@GetSlotLabel(index)</span>
                    </button>
                }
            </div>
        </div>
    }
    else
    {
        <!-- Static Mode: All items visible -->
        <div class="schedule-display @GetLayoutClass()">
            @for (int i = 0; i < ScheduleItems.Count; i++)
            {
                var index = i;
                var item = ScheduleItems[index];
                var label = GetSlotLabel(index);

                <div class="schedule-item @(index == 0 ? "now-item" : "")">
                    <!-- Label -->
                    <div class="item-label">
                        @label
                    </div>

                    <!-- Image Container -->
                    <div class="item-image-container">
                        <img src="@GetImageSrc(item)" alt="@(string.IsNullOrEmpty(item.Label) ? label : item.Label)" class="item-image" />
                    </div>

                    <!-- Optional Activity Name -->
                    @if (!string.IsNullOrEmpty(item.Label))
                    {
                        <div class="item-name">
                            @item.Label
                        </div>
                    }
                </div>
            }
        </div>
    }
</div>

<style>
    .schedule-container {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        min-height: 100dvh;
        width: 100%;
        padding: 1.5rem;
        background-color: var(--calm-bg, #F9F7F3);
        box-sizing: border-box;
    }

    /* Unobtrusive Back Button */
    .back-button {
        position: fixed;
        top: 1rem;
        left: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.75rem;
        height: 2.75rem;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.9);
        color: #606F7B;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 50;
        opacity: 0.7;
    }

    .back-button:hover {
        opacity: 1;
        background-color: white;
        color: #5B9A9A;
    }

    /* Loading State */
    .loading-container {
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .loading-spinner {
        width: 3rem;
        height: 3rem;
        border: 3px solid #E2DFD8;
        border-top-color: #5B9A9A;
        border-radius: 50%;
        animation: spin 1s linear infinite;
    }

    /* Empty State */
    .empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1.5rem;
        text-align: center;
    }

    .return-button {
        padding: 1rem 2rem;
        font-size: 1.125rem;
        font-weight: 600;
        background-color: #5B9A9A;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(91, 154, 154, 0.3);
    }

    .return-button:hover {
        background-color: #4A8585;
    }

    /* Schedule Display - Main Container */
    .schedule-display {
        display: flex;
        align-items: stretch;
        justify-content: center;
        gap: 2rem;
        width: 100%;
        max-width: 1400px;
        flex-wrap: wrap;
    }

    /* Responsive layout adjustments */
    .schedule-display.single-item {
        max-width: 500px;
    }

    .schedule-display.two-items {
        max-width: 900px;
    }

    .schedule-display.three-items {
        max-width: 1400px;
    }

    /* Schedule Item */
    .schedule-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        min-width: 200px;
        max-width: 400px;
        background-color: white;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

    /* Item Label (Now/Then/Next) */
    .item-label {
        width: 100%;
        padding: 1rem 1.5rem;
        font-size: 1.75rem;
        font-weight: 700;
        text-align: center;
        color: #5B9A9A;
        background-color: rgba(91, 154, 154, 0.1);
        letter-spacing: 0.025em;
    }

    /* Image Container */
    .item-image-container {
        width: 100%;
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #F0EDE8;
        min-height: 250px;
    }

    .item-image {
        width: 100%;
        height: 100%;
        min-height: 250px;
        max-height: 50vh;
        object-fit: cover;
    }

    /* Activity Name */
    .item-name {
        width: 100%;
        padding: 1rem 1.5rem;
        font-size: 1.25rem;
        font-weight: 600;
        text-align: center;
        color: #3D4852;
        background-color: white;
        border-top: 1px solid #F0EDE8;
    }

    /* Tablet/Desktop horizontal layout */
    @@media (min-width: 768px) {
        .schedule-container {
            padding: 2rem;
        }

        .schedule-display {
            flex-wrap: nowrap;
        }

        .item-label {
            font-size: 2rem;
            padding: 1.25rem 1.5rem;
        }

        .item-image-container {
            min-height: 300px;
        }

        .item-image {
            min-height: 300px;
        }

        .item-name {
            font-size: 1.5rem;
        }
    }

    /* Large screens */
    @@media (min-width: 1024px) {
        .item-label {
            font-size: 2.25rem;
            padding: 1.5rem 2rem;
        }

        .item-image-container {
            min-height: 350px;
        }

        .item-image {
            min-height: 350px;
        }

        .item-name {
            font-size: 1.75rem;
            padding: 1.25rem 2rem;
        }
    }

    /* Mobile portrait - stack vertically */
    @@media (max-width: 767px) and (orientation: portrait) {
        .schedule-display {
            flex-direction: column;
            gap: 1.5rem;
        }

        .schedule-item {
            max-width: 100%;
            width: 100%;
        }

        .item-label {
            font-size: 1.5rem;
        }

        .item-image-container {
            min-height: 150px;
        }

        .item-image {
            min-height: 150px;
            max-height: 30vh;
        }

        .item-name {
            font-size: 1.125rem;
        }
    }

    @@keyframes spin {
        from {
            transform: rotate(0deg);
        }
        to {
            transform: rotate(360deg);
        }
    }

    /* Gentle pulse animation for Now item - slow and calming */
    .now-item {
        animation: gentlePulse 3s ease-in-out infinite;
    }

    @@keyframes gentlePulse {
        0%, 100% {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08), 0 0 0 0 rgba(91, 154, 154, 0);
        }
        50% {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08), 0 0 25px 8px rgba(91, 154, 154, 0.3);
        }
    }

    /* Mode Toggle Button - unobtrusive but accessible */
    .mode-toggle {
        position: fixed;
        top: 1rem;
        right: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 0.875rem;
        border-radius: 2rem;
        background-color: rgba(255, 255, 255, 0.9);
        color: #606F7B;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.2s ease;
        z-index: 50;
        opacity: 0.7;
        min-height: 44px;
    }

    .mode-toggle:hover {
        opacity: 1;
        background-color: white;
        color: #5B9A9A;
    }

    .toggle-icon {
        width: 1.25rem;
        height: 1.25rem;
    }

    .toggle-label {
        font-size: 0.875rem;
        font-weight: 500;
    }

    /* Auto-advance Display */
    .auto-advance-display {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;
        width: 100%;
        max-width: 600px;
    }

    .auto-advance-item {
        width: 100%;
        max-width: 600px;
    }

    .auto-advance-image {
        transition: opacity 0.5s ease-in-out;
    }

    /* Progress Indicators */
    .progress-indicators {
        display: flex;
        gap: 1.5rem;
        padding: 1rem;
    }

    .progress-dot {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        background-color: rgba(255, 255, 255, 0.7);
        border: 2px solid #E2DFD8;
        border-radius: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 80px;
    }

    .progress-dot:hover {
        background-color: rgba(255, 255, 255, 0.95);
        border-color: #5B9A9A;
    }

    .progress-dot.active {
        background-color: white;
        border-color: #5B9A9A;
        box-shadow: 0 4px 12px rgba(91, 154, 154, 0.25);
        transform: scale(1.05);
    }

    .dot-label {
        font-size: 1rem;
        font-weight: 600;
        color: #606F7B;
        transition: color 0.3s ease;
    }

    .progress-dot.active .dot-label {
        color: #5B9A9A;
    }

    /* Responsive adjustments for auto-advance mode */
    @@media (min-width: 768px) {
        .auto-advance-display {
            max-width: 700px;
        }

        .auto-advance-item {
            max-width: 700px;
        }

        .progress-dot {
            padding: 1rem 1.5rem;
            min-width: 100px;
        }

        .dot-label {
            font-size: 1.125rem;
        }
    }

    @@media (min-width: 1024px) {
        .auto-advance-display {
            max-width: 800px;
        }

        .auto-advance-item {
            max-width: 800px;
        }

        .progress-indicators {
            gap: 2rem;
        }

        .progress-dot {
            min-width: 120px;
        }

        .dot-label {
            font-size: 1.25rem;
        }
    }

    /* Mobile portrait adjustments */
    @@media (max-width: 767px) and (orientation: portrait) {
        .mode-toggle {
            top: 0.75rem;
            right: 0.75rem;
            padding: 0.375rem 0.75rem;
        }

        .toggle-label {
            font-size: 0.75rem;
        }

        .progress-indicators {
            gap: 0.75rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .progress-dot {
            padding: 0.5rem 1rem;
            min-width: 70px;
        }

        .dot-label {
            font-size: 0.875rem;
        }
    }
</style>
