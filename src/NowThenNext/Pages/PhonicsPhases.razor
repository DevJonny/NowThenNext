@page "/phonics"
@using NowThenNext.Models
@inject NowThenNext.Services.IPhonicsDataService PhonicsData
@inject NowThenNext.Services.IPhonicsProgressService PhonicsProgress
@inject NavigationManager Navigation

<PageTitle>Phonics - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button @onclick="GoBack" class="back-button" aria-label="Go back">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <h1 class="text-2xl sm:text-3xl font-bold text-calm-phonics">
                    Phonics
                </h1>
            </div>
        </div>
    </header>

    <!-- Phase Cards -->
    <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 flex-1">
        <div class="phase-grid">
            @foreach (var phase in Phases)
            {
                var progress = PhaseProgress.GetValueOrDefault(phase.Id);
                var percentage = progress.Total > 0 ? (double)progress.Completed / progress.Total * 100 : 0;

                <a href="phonics/@phase.Id" class="phase-card">
                    <div class="phase-header">
                        <h2 class="phase-name">@phase.Name</h2>
                        <span class="phase-count">@progress.Completed/@progress.Total sounds</span>
                    </div>
                    <p class="phase-description">@phase.Description</p>
                    <div class="progress-bar-container">
                        <div class="progress-bar-fill" style="width: @percentage.ToString("F0")%"></div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

<style>
    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        background-color: white;
        color: #7BA3C4;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        background-color: #F0EDE8;
    }

    .phase-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        padding-bottom: 2rem;
    }

    .phase-card {
        display: block;
        padding: 1.25rem 1.5rem;
        background-color: white;
        border-radius: 0.75rem;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        border: 2px solid transparent;
        cursor: pointer;
        transition: all 0.2s ease;
        text-decoration: none;
        min-height: 3rem;
    }

    .phase-card:hover {
        border-color: #7BA3C4;
        box-shadow: 0 4px 12px rgba(123, 163, 196, 0.2);
        transform: translateY(-2px);
    }

    .phase-card:active {
        transform: translateY(0);
    }

    .phase-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 0.375rem;
    }

    .phase-name {
        font-size: 1.25rem;
        font-weight: 700;
        color: #3D4852;
    }

    .phase-count {
        font-size: 0.875rem;
        font-weight: 600;
        color: #7BA3C4;
    }

    .phase-description {
        font-size: 0.9375rem;
        color: #606F7B;
        margin-bottom: 0.75rem;
    }

    .progress-bar-container {
        width: 100%;
        height: 0.5rem;
        background-color: #E2DFD8;
        border-radius: 0.25rem;
        overflow: hidden;
    }

    .progress-bar-fill {
        height: 100%;
        background-color: #7BA3C4;
        border-radius: 0.25rem;
        transition: width 0.3s ease;
    }

    @@media (min-width: 768px) {
        .phase-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 1.25rem;
        }

        .phase-card {
            padding: 1.5rem 1.75rem;
        }

        .phase-name {
            font-size: 1.375rem;
        }
    }
</style>

@code {
    private List<PhonicsPhase> Phases = new();
    private Dictionary<int, (int Completed, int Total)> PhaseProgress = new();

    protected override async Task OnInitializedAsync()
    {
        Phases = PhonicsData.GetAllPhases();

        foreach (var phase in Phases)
        {
            PhaseProgress[phase.Id] = await PhonicsProgress.GetPhaseProgressAsync(phase.Id);
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("");
    }
}
