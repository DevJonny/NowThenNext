@page "/phonics/{PhaseId:int}"
@using NowThenNext.Models
@inject NowThenNext.Services.IPhonicsDataService PhonicsData
@inject NowThenNext.Services.IPhonicsProgressService PhonicsProgress
@inject NavigationManager Navigation

<PageTitle>@(Phase?.Name ?? "Phonics") - NowThenNext</PageTitle>

<div class="flex flex-col min-h-screen">
    <!-- Header -->
    <header class="w-full max-w-5xl mx-auto px-4 sm:px-6 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <button @onclick="GoBack" class="back-button" aria-label="Go back">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <div>
                    <h1 class="text-2xl sm:text-3xl font-bold text-calm-phonics">
                        @Phase?.Name
                    </h1>
                    <p class="text-sm text-calm-text-light">@Progress.Completed/@Progress.Total sounds</p>
                </div>
            </div>
        </div>
    </header>

    <!-- Sound List -->
    <div class="w-full max-w-5xl mx-auto px-4 sm:px-6 flex-1">
        @if (Phase != null)
        {
            @foreach (var week in Phase.Weeks)
            {
                <div class="week-group">
                    <div class="week-label">Week @week.WeekNumber</div>
                    <div class="sound-grid">
                        @foreach (var card in week.Cards)
                        {
                            var state = GetCardState(card.Id);

                            @if (state == CardState.Locked)
                            {
                                <div class="sound-tile sound-locked" aria-label="@card.Grapheme - locked">
                                    <span class="sound-grapheme">@card.Grapheme</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" class="lock-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" />
                                        <path d="M7 11V7a5 5 0 0110 0v4" />
                                    </svg>
                                </div>
                            }
                            else
                            {
                                <a href="phonics/@PhaseId/card/@card.Id" class="sound-tile @(state == CardState.Current ? "sound-current" : "sound-completed")" aria-label="@card.Grapheme - @(state == CardState.Current ? "current" : "completed")">
                                    <span class="sound-grapheme">@card.Grapheme</span>
                                    @if (state == CardState.Completed)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" class="check-icon" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                                        </svg>
                                    }
                                </a>
                            }
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .back-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 3rem;
        height: 3rem;
        border-radius: 0.75rem;
        background-color: white;
        color: #7BA3C4;
        border: none;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .back-button:hover {
        background-color: #F0EDE8;
    }

    .week-group {
        margin-bottom: 1.25rem;
    }

    .week-label {
        font-size: 0.8125rem;
        font-weight: 600;
        color: #8B99A7;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
        padding-left: 0.25rem;
    }

    .sound-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(4rem, 1fr));
        gap: 0.625rem;
    }

    .sound-tile {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        min-height: 3.5rem;
        padding: 0.5rem;
        border-radius: 0.625rem;
        text-decoration: none;
        transition: all 0.2s ease;
    }

    .sound-grapheme {
        font-size: 1.25rem;
        font-weight: 700;
    }

    /* Completed state */
    .sound-completed {
        background-color: #E8F0F6;
        color: #606F7B;
        border: 2px solid transparent;
    }

    .sound-completed:hover {
        border-color: #7BA3C4;
    }

    .check-icon {
        position: absolute;
        top: 0.125rem;
        right: 0.125rem;
        width: 0.875rem;
        height: 0.875rem;
        color: #6B9A7D;
    }

    /* Current/next unlocked state */
    .sound-current {
        background-color: white;
        color: #3D4852;
        border: 2px solid #7BA3C4;
        box-shadow: 0 2px 8px rgba(123, 163, 196, 0.25);
    }

    .sound-current:hover {
        box-shadow: 0 4px 12px rgba(123, 163, 196, 0.35);
    }

    /* Locked state */
    .sound-locked {
        background-color: #F0EDE8;
        color: #C0BFBB;
        border: 2px solid transparent;
        cursor: default;
    }

    .lock-icon {
        position: absolute;
        top: 0.125rem;
        right: 0.125rem;
        width: 0.75rem;
        height: 0.75rem;
        color: #C0BFBB;
    }

    @@media (min-width: 768px) {
        .sound-grid {
            grid-template-columns: repeat(auto-fill, minmax(5rem, 1fr));
            gap: 0.75rem;
        }

        .sound-tile {
            min-height: 4rem;
        }

        .sound-grapheme {
            font-size: 1.375rem;
        }
    }
</style>

@code {
    [Parameter]
    public int PhaseId { get; set; }

    private PhonicsPhase? Phase;
    private (int Completed, int Total) Progress;
    private HashSet<string> CompletedIds = new();
    private string? NextUnlockedId;

    protected override async Task OnInitializedAsync()
    {
        Phase = PhonicsData.GetPhase(PhaseId);
        if (Phase == null) return;

        Progress = await PhonicsProgress.GetPhaseProgressAsync(PhaseId);
        NextUnlockedId = await PhonicsProgress.GetNextUnlockedGraphemeIdAsync(PhaseId);

        // Build set of completed IDs
        foreach (var card in Phase.Weeks.SelectMany(w => w.Cards))
        {
            if (await PhonicsProgress.IsCompletedAsync(card.Id))
                CompletedIds.Add(card.Id);
        }
    }

    private CardState GetCardState(string cardId)
    {
        if (CompletedIds.Contains(cardId))
            return CardState.Completed;
        if (cardId == NextUnlockedId)
            return CardState.Current;
        return CardState.Locked;
    }

    private void GoBack()
    {
        Navigation.NavigateTo("phonics");
    }

    private enum CardState
    {
        Completed,
        Current,
        Locked
    }
}
